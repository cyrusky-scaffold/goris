{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "types": ["reflect-metadata"],
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true
  }
}
